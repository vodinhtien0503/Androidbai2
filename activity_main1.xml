<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<Button
    android:id="@+id/bt_1"
    android:layout_width="100dp"
    android:text="1"
    android:layout_height="wrap_content" />
<Button
    android:id="@+id/bt_2"
    android:layout_marginTop="180dp"
    android:text="3"
    android:layout_below="@id/bt_1"
    android:layout_width="100dp"
    android:layout_height="wrap_content" />
 <Button
     android:id="@+id/bt_3"
     android:layout_below="@id/bt_2"
     android:text="4"
     android:layout_marginTop="185dp"
     android:layout_width="100dp"
     android:layout_height="wrap_content" />
<Button
    android:id="@+id/bt_4"
    android:layout_toRightOf="@id/bt_1"
    android:layout_marginLeft="40dp"
    android:text="7"
    android:layout_width="100dp"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_5"
        android:layout_toRightOf="@id/bt_2"
        android:text="6"
        android:layout_marginTop="228dp"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_6"
        android:layout_toRightOf="@id/bt_3"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="40dp"
        android:text="8"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_7"
        android:layout_toRightOf="@id/bt_5"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:text="2"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_8"
        android:layout_toRightOf="@id/bt_6"
        android:layout_marginTop="228dp"
        android:layout_marginLeft="40dp"
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_9"
        android:layout_toRightOf="@id/bt_6"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="40dp"
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
</RelativeLayout>